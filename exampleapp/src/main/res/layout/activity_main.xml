<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
    >

    <include layout="@layout/brand_image_header"/>

<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">



    <Button
        android:id="@+id/start_setup_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Standard Setup"
        style="@style/SparkButton.InSpinnerBox"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/start__group_setup_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Group Setup"
        style="@style/SparkButton.InSpinnerBox"
        android:layout_below="@+id/start_setup_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

</RelativeLayout>
